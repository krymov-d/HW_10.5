<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tb_ll_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <include
            android:id="@+id/tb_second_activity"
            layout="@layout/tb_second_activity"
            android:visibility="visible" />

        <include
            android:id="@+id/tb_convertor_delete"
            layout="@layout/tb_convertor_delete"
            android:visibility="gone" />

        <View
            android:id="@+id/tb_second_activity_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/btn_text_color" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bnv_second_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_ll_second_activity"
        app:navGraph="@navigation/nav_graph_second" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/theme_bnv"
        app:backgroundTint="?attr/bnv_bg"
        app:itemRippleColor="@color/btn_text_color_tint_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:menu="@menu/menu_bnv_second_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>