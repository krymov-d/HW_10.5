<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="code_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/btn_bg_blue</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColorHint">@color/tv_hint_color</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="custom_code_style">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="btn_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@drawable/btn_bg_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="tb_title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="chip_style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:background">@drawable/chip_bg_selector</item>
        <item name="android:textColor">@drawable/chip_bg_text_selector</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="tab_layout_text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="tv_contacts">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_text_color</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="btn_contacts">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/btn_bg_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="vp_tv_statistics">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_text_color</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="df_delete">
        <item name="android:textColor">@color/tv_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="df_delete_btn">
        <item name="android:background">@drawable/btn_df_convertor_delete_selector</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>
</resources>